= form_for(@user, url: {action: :sign_in}) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:

      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .login
    = f.text_field :name, placeholder: "We only need a username!", size: 30

  .actions
    = f.submit "Sign In"

